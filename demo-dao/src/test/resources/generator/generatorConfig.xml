<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<!-- mybatis generator 示例配置 -->
<generatorConfiguration>

    <!--指定外部属性文件(非必须resource url)-->
    <!--<properties resource="/config.properties"/>-->

    <!--至少有一个-->
    <!--defaultModelType 使用生成实体类的规则(已定制请勿设置)-->
    <context id="mysql" targetRuntime="com.generator.plugin.IntrospectedTableMyBatis3IPRImpl">

        <!--简单的插件只是简单的修改类型,可设置默认值-->
        <plugin type="com.generator.plugin.IPRSimplePlugin"/>

        <plugin type="org.mybatis.generator.plugins.ToStringPlugin"/>

        <!-- 不生成注释 -->
        <commentGenerator type="com.generator.plugin.CommentGeneratorForIPR">
            <property name="suppressDate" value="true"/>
        </commentGenerator>

        <!-- 数据库连接 -->
        <!--<jdbcConnection driverClass="${jdbc_driver}"-->
                        <!--connectionURL="${jdbc_url}"-->
                        <!--userId="${jdbc_user}"-->
                        <!--password="${jdbc_password}">-->
        <!--</jdbcConnection>-->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql:///test?generateSimpleParameterMetadata=true"
                        userId="root"
                        password="root">
        </jdbcConnection>

        <javaTypeResolver type="com.generator.plugin.JavaTypeResolverIPRImpl">
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <!-- generate Model -->
        <javaModelGenerator targetPackage="com.weirdo.demo.dataobject"
                            targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <!-- generate xml -->
        <sqlMapGenerator targetPackage="mapper"
                         targetProject="src/main/resources">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <!-- generate Mapper -->
        <javaClientGenerator type="XMLMAPPER"
                             targetPackage="com.weirdo.demo.dao"
                             targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>


        <!--项目日志-->
        <table tableName="userinfo" domainObjectName="UserInfo"
               enableSelectByExample="false" enableDeleteByExample="false"
               enableCountByExample="false" enableUpdateByExample="false">
            <property name="ignoreQualifiersAtRuntime" value="true"/>
            <property name="useActualColumnNames" value="false"/>
            <property name="generateDefaultValue" value="false"/>
        </table>


    </context>
</generatorConfiguration>
